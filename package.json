{
  "name": "branchie",
  "displayName": "branchie",
  "description": "Show all files changed in branch",
  "version": "0.0.1",
  "publisher": "mminki",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:branchie-changes",
    "onView:branchie-committed",
    "onCommand:extension.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "branchie",
          "title": "Branchie",
          "icon": "./resources/icon.svg"
        }
      ]
    },
    "views": {
      "branchie": [
        {
          "id": "branchie-changes",
          "name": "Current"
        },
        {
          "id": "branchie-committed",
          "name": "Committed"
        }
      ]
    },
    "commands": [
      {
        "command": "branchie.refresh",
        "title": "Refresh"
      },
      {
        "command": "branchie.open",
        "title": "Open"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "branchie.refresh",
          "when": "view == branchie-changes || view == branchie-committed"
        }
      ],
      "view/item/context": [
        {
          "command": "branchie.open",
          "when": "view == branchie-changes || view == branchie-committed"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.40.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "typescript": "^3.6.4",
    "tslint": "^5.20.0",
    "vscode-test": "^1.2.2"
  }
}
