{
  "name": "branchie",
  "displayName": "Branchie",
  "description": "Jump from branch to branch without losing focus",
  "repository": "https://github.com/mminkin/vscode-branchie.git",
  "version": "1.0.0",
  "publisher": "mminki",
  "engines": {
    "vscode": "^1.50.0"
  },
  "icon": "resources/branchie-avatar.png",
  "galleryBanner": {
    "color": "#f5731d",
    "theme": "light"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "branch",
    "branches",
    "branchie",
    "commits",
    "view commits",
    "committed"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "branchie",
          "title": "Branchie",
          "icon": "./resources/branchie-icon.svg"
        }
      ]
    },
    "views": {
      "branchie": [
        {
          "id": "branchie-open",
          "name": "Opened Last Session"
        },
        {
          "id": "branchie-committed",
          "name": "Committed to Branch"
        }
      ]
    },
    "commands": [
      {
        "command": "branchie.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "branchie.open",
        "title": "Open"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "branchie.refresh",
          "when": "view == branchie-committed || view == branchie-open",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "branchie.open",
          "when": "viewItem == file && (view == branchie-committed || view == branchie-open)"
        }
      ]
    },
    "configuration": {
      "title": "Branchie",
      "properties": {
        "branchie.log": {
          "type": "boolean",
          "default": false,
          "description": "Show logging in output channel"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.19.3",
    "@types/vscode": "^1.50.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.3",
    "tslint": "^5.20.0",
    "typescript": "^3.9.7",
    "vscode-test": "^1.4.1"
  }
}
